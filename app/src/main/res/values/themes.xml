<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialDesign" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorAccent">?themeColorLight</item>
        <item name="colorPrimaryVariant">?themeColorDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?themeColorPrimary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_dark2</item>

        <!-- Customize your theme here. -->
        <item name="textColorPrimary">@color/black</item>
        <item name="textColorConnected">@color/green</item>
        <item name="textColorDisConnected">@color/light_gray</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#212121</item>

        <item name="bottomAppBarStyle">@style/MyBarStyle</item>
        <item name="textAppearanceButton">@style/AppTextAppearanceButton</item>
        <item name="materialButtonStyle">@style/AppButton</item>

        <item name="themeColorPrimary">@color/gray_primary</item>
        <item name="themeColorDark">@color/gray_dark</item>
        <item name="themeColorLight">@color/gray_light</item>
        <item name="themeColorBackground">@color/gray_background</item>
    </style>

    <style name="Theme.MaterialDesign.Splash">
        <item name="android:windowBackground">@drawable/splash_background_drawable</item>
    </style>

    <style name="IndigoTheme" parent="Theme.MaterialDesign">

        <item name="themeColorPrimary">@color/indigo</item>
        <item name="themeColorDark">@color/indigo_dark</item>
        <item name="themeColorLight">@color/indigo_light</item>
        <item name="themeColorBackground">@color/indigo_background</item>

    </style>

    <style name="GrayTheme" parent="Theme.MaterialDesign">
        <item name="themeColorPrimary">@color/gray_primary</item>
        <item name="themeColorDark">@color/gray_dark</item>
        <item name="themeColorLight">@color/gray_light</item>
        <item name="themeColorBackground">@color/gray_background</item>
    </style>

    <style name="SeaTheme" parent="Theme.MaterialDesign">
        <item name="themeColorPrimary">@color/sea_primary</item>
        <item name="themeColorDark">@color/sea_dark</item>
        <item name="themeColorLight">@color/sea_light</item>
        <item name="themeColorBackground">@color/sea_background</item>
    </style>

    <style name="MyBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">?themeColorDark</item>
    </style>

    <style name="AppTextAppearanceButton" parent="TextAppearance.MaterialComponents.Button">
<!--        <item name="android:textAllCaps">false</item>-->
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?themeColorDark</item>
    </style>

</resources>